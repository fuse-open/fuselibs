<Page Title="SystemScreenConfig" ux:Class="SystemScreenConfigPage">
	<InfoStack ux:Key="Info">
		<p>Buttons should show and hide status bar and navigation bar parts of the system user interface.</p>
	</InfoStack>
	<Android>
		<SystemScreenConfig Show="{displayValue}" IsDim="{isDim}" Theme="{theme}" ResetDelay="2"/>
	</Android>
	<JavaScript>
		var Observable = require("FuseJS/Observable");
		var displayValue = Observable("All");
		var actualShow = Observable("All");
		var isDim = Observable("false");
		var theme = Observable("Light");
		function minimal() {
			displayValue.value = "Minimal";
		}
		function full() {
			displayValue.value = "Full";
		}
		function none() {
			displayValue.value = "None";
		}
		function toggleDim() {
			if(isDim.value == "false") {
				isDim.value = "true";
			} else {
				isDim.value = "false";
			}
		}
		function toggleTheme() {
			if(theme.value == "Light") {
				theme.value = "Dark";
			} else {
				theme.value = "Light";
			}
		}
		module.exports = {
			minimal: minimal,
			full: full,
			none: none,
			displayValue: displayValue,
			isDim: isDim,
			toggleDim: toggleDim,
			theme: theme,
			toggleTheme: toggleTheme
		}
	</JavaScript>
	<ScrollView>
		<StackPanel>
			<Text TextWrapping="Wrap">Status bar should hide icon, toggles:</Text>
			<StdButton Clicked="{toggleDim}" Text="Minimal" Margin="20"/>

			<Text>Ui should toggle between light and dark theme:</Text>
			<StdButton Clicked="{toggleTheme}" Text="Toggle theme" Margin="20"/>

			<Text>Navigation bar should be hidden:</Text>
			<StdButton Clicked="{minimal}" Text="Minimal" Margin="20"/>

			<Text>Navigation bar and status bar should dissapear:</Text>
			<StdButton Clicked="{none}" Text="None" Margin="20"/>

			<Text FontSize="12" TextWrapping="Wrap" Margin="0,0,0,20">Navigation bar might only turn transparent background on some systems</Text>
			<Text>Navigation bar and status bar should be shown:</Text>
			<StdButton Clicked="{full}" Text="Full" Margin="20"/>

			<Text>Press this button:</Text>
			<StdButton Clicked="{none}" Text="Press me!" Margin="20,50,20,20"/>

			<Text TextWrapping="Wrap">Swipe down from the top of the device to bring back the status bar manually. It should dissapear again in 2 seconds.</Text>
		</StackPanel>
	</ScrollView>
</Page>

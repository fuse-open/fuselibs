					<Panel ux:Class="MyTextInputWorkaround" IsFocusable="true" MinHeight="44" Padding="5" TextAlignment="Left" HitTestMode="LocalBounds" TextColor="#000" CaretColor="#000" PlaceholderColor="#ccc" CornerRadius="3" Width="250">
						<float4 ux:Property="TextColor" />
						<float4 ux:Property="PlaceholderColor" />
						<float4 ux:Property="CaretColor" />
						<float4 ux:Property="CornerRadius" />
						<string ux:Property="Value" />
						<string ux:Property="AutoCorrectHint" />
						<string ux:Property="AutoCapitalizationHint" />
						<string ux:Property="ActionStyle" />
						<object ux:Property="ActionTriggered" />
						<string ux:Property="TextAlignment" />

						<TextInput ux:Name="input" 
							Alignment="{ReadProperty TextAlignment}" 
							Value="{ReadProperty Value}"
							PlaceholderColor="{ReadProperty PlaceholderColor}"
							TextColor="{ReadProperty TextColor}"
							CaretColor="{ReadProperty CaretColor}"
							ActionStyle="{ReadProperty ActionStyle}"
							ActionTriggered="{ReadProperty ActionTriggered}"
							AutoCorrectHint="{ReadProperty AutoCorrectHint}"
							AutoCapitalizationHint="{ReadProperty AutoCapitalizationHint}"
							Focus.Delegate="this" 
							MinWidth="5">

							<WhileFocused>
								<Change input.TextAlignment="{ReadProperty TextAlignment}" />
							</WhileFocused>

							<WhileFocused Invert="true">
								<Change input.TextAlignment="Left" />
							</WhileFocused>

						</TextInput>

						<Clicked>
							<GiveFocus TargetNode="input" />
						</Clicked>

						<Rectangle Layer="Background" Opacity="1" CornerRadius="{ReadProperty CornerRadius}">
							<Stroke Width="1" Color="#CCC" />
							<SolidColor Color="#FFF" />
						</Rectangle>
					</Panel>



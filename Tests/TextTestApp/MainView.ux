						<Rectangle Layer="Background" CornerRadius="3">
							<Stroke Width="1" Color="#CCC" />
							<SolidColor Color="#FFF" />
						</Rectangle>
					</TextInput>

					<TextView ux:Class="MyTextView" FontSize="20" TextWrapping="NoWrap" Padding="5" Width="250" Alignment="Center" TextColor="#000" CaretColor="#000">

					    <Rectangle Layer="Background" CornerRadius="3">
							<Stroke Width="1" Color="#CCC" />
							<SolidColor Color="#FFF" />
					    </Rectangle>

					</TextView>

				</StackPanel>



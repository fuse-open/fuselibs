<Panel ux:Class="UX.Replace">
	<Selection ux:Name="TS" MaxCount="2" />

	<Panel ux:Class="RMyItem" Color="#0000">
		<string ux:Property="Value"/>
		<Selectable Value="{Property this.Value}" ux:Name="Sel"/>
		<WhileSelected>
			<Change this.Color="#FFFF"/>
		</WhileSelected>
	</Panel>

	<RMyItem Value="one" ux:Name="I1"/>
	<RMyItem Value="two" ux:Name="I2"/>
	<RMyItem Value="three" ux:Name="I3"/>
	<RMyItem Value="four" ux:Name="I4"/>
</Panel>